{
  "name": "boilerplate-npm-package",
  "version": "0.0.0-semantically-released",
  "description": "Base scaffolding for future NodeJS packages",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "commit": "git-cz",
    "test": "cross-env NODE_ENV=test nyc mocha",
    "test:watch": "mocha --compilers js:babel-core/register -w",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gyss/boilerplate-npm-package.git"
  },
  "keywords": [
    "node",
    "boilerplate"
  ],
  "files": [
    "dist",
    "README.md "
  ],
  "author": "J. Lladro <gravedian@gmail.com> (http://joselladro.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gyss/boilerplate-npm-package/issues"
  },
  "homepage": "https://github.com/gyss/boilerplate-npm-package#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-plugin-istanbul": "4.1.3",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.24.1",
    "chai": "3.5.0",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cross-env": "4.0.0",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.3.0",
    "nyc": "10.3.0",
    "rimraf": "2.6.1",
    "semantic-release": "^6.3.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm test && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  }
}
